﻿@using Hv.Sos100.DataService.Statistics.Api.Models
@model List<AdStatistics>;

<!DOCTYPE html>
<html>
<head>
    <title>Annons</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="~/css/ad.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
</head>
<body>
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <nav class="categorymenu">
        <ul class="navbar-nav1">
            <li class="nav-item1"><a href="@Url.Action("Index", "Activity")">AKTIVITETER</a></li>
            <li class="nav-item1"><a href="@Url.Action("Index", "Event")">EVENEMANG</a></li>
            <li class="gradienttext"><a href="@Url.Action("Index", "Ad")">ANNONSER</a></li>
        </ul>
    </nav>

    <h1>ANNONSSTATISTIK</h1>
    <hr>
    <div class="ChooseAd">
        <label for="ads">VÄLJ ANNONS:</label>
        <select id="ads" onchange="updateStatistics()">
            @foreach (var adData in Model)
            {
                <option value="@adData.AdvertisementStatisticsID">@adData.AdvertisementStatisticsID</option>
            }
        </select>
    </div>


    <div class="chart-container">
        <div class="chart-info">
            <h2>VISNINGAR</h2>
            <p>Antal visningar: <span id="totalViews"></span> .</p>
        </div>
    </div>
    <script>
        function updateStatistics() {
            var selectedAdvertisementStatisticsID = parseInt(document.getElementById('ads').value);
            var allAds = JSON.parse('@Html.Raw(Json.Serialize(Model))');
            var selectedAd = allAds.find(e => e.AdvertisementStatisticsID === selectedAdvertisementStatisticsID);

            var totalViewsElement = document.getElementById('totalViews');
            if (totalViewsElement && selectedAd) {
                totalViewsElement.innerText = selectedAd.TotalViews;
            }
        }
    </script>
</body>
</html>
