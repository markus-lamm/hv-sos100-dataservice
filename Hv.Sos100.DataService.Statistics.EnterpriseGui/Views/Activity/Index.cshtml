    <h1>Aktivitetstatistik</h1>
    <hr>

    <div class="ChooseActivity">
        <label for="activity">Välj aktivitet:</label>
        <select id="activity" onchange="updateStatistics()">
            <option value="activity1">Activity 1</option>
            <option value="activity2">Activity 2</option>
            <option value="activity3">Activity 3</option>
        </select>
    </div>
    <div class="Views">
        <h2>Visningar</h2>
        <canvas id="ViewsChart"></canvas>
    </div>
    <div class="SavedEvents">
        <h2>Sparningar:</h2>
        <canvas id="SavedEventsChart"></canvas>
        
    </div>
   

    <script>
                // Hämta dropdown-länkarna för varje dropdown-meny
                var dropdownToggles = document.querySelectorAll('.navbar-nav .dropdown-toggle');

        // Hämta dropdown-menyerna för varje dropdown-länk
        var dropdownMenus = document.querySelectorAll('.navbar-nav .dropdown-menu');

        // Lägg till händelselyssnare för att visa dropdown-menyn när användaren hovrar över varje länk
        dropdownToggles.forEach(function (dropdownToggle, index) {
            dropdownToggle.addEventListener('mouseover', function () {
                dropdownMenus[index].style.display = 'block';
            });
        });

        // Lägg till en klickhändelse för att dölja dropdown-menyn när användaren klickar någon annanstans på sidan
        document.addEventListener('click', function (event) {
            dropdownToggles.forEach(function (dropdownToggle, index) {
                var targetElement = event.target;

                // Om klickhändelsen inte är på dropdown-länken eller dropdown-menyn, dölj dropdown-menyn
                if (!targetElement.matches('.navbar-nav .dropdown-toggle') && !targetElement.matches('.navbar-nav .dropdown-menu')) {
                    dropdownMenus[index].style.display = 'none';
                }
            });
        });
        var MonthlyViews = @Html.Raw(ViewBag.MonthlyViews);
        var SavedEvents = @Html.Raw(ViewBag.SavedEvents);

        var ctxViews = document.getElementById('ViewsChart').getContext('2d');
        var viewsChart = new Chart(ctxViews, {
            type: 'bar',
            data: {
                labels: ['jan','feb','mar','apr','maj','jun','jul','aug','sep','okt','nov','dec'],
                datasets: [{
                    label: 'Visningar',
                    data: [500, 550, 650, 590, 689, 456, 974, 537, 987, 1092, 879, 783],
                    backgroundColor: '#FE85B6',
                    borderColor: '#FE85B6',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

       

        var ctxSavedEvents = document.getElementById('SavedEventsChart').getContext('2d');
        var savedEventsChart = new Chart(ctxSavedEvents, {
            type: 'bar',
            data: {
                labels: ['Totalt sparade aktiviteter'],
                datasets: [{
                    label: 'Totalt sparade aktiviteter',
                    data: [SavedEvents],
                    backgroundColor: '#FFA487',
                    borderColor: '#FFA487',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                },
                plugins: {
                    datalabels: {
                        anchor: 'end',
                        align: 'end',
                        formatter: function (value, context) {
                            return value; 
                        }
                    }
                }
            }
        });


    </script>
</body>
