@using Hv.Sos.DataService.Advertisement.Api.Model
@model List<Ads>
@{
    ViewData["Title"] = "Home Page";
}

<p class="mt-4">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Annons url</th>
            <th scope="col">Antal Visningar</th>
            <th scope="col">Typ av annons</th>
            <th scope="col">Alternativ</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="5">Inga annons att visa</td>
            </tr>
        }
        else
        {
            @foreach (var ad in Model)
            {
                <tr>
                    <td>@ad.Id</td>
                    <td>@ad.ImageUrl</td>
                    <td>@if (ad.Views == null) { @Html.Raw(0) } else{ @ad.Views }</td>
                    <td>@ad.ImageSize</td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@ad.Id">Radera</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>